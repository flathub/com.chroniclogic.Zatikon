<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.chroniclogic.Zatikon</id>

  <name>Zatikon</name>
  <summary>Chess-like, fantasy game of conquering the enemy's castle</summary>
  <developer id="com.chroniclogic">
    <name>ChronicLogic</name>
  </developer>

  <metadata_license>FSFAP</metadata_license>
  <project_license>AGPL-3.0-or-later</project_license>

  <url type="homepage">https://github.com/zatikon/zatikon</url>
  <url type="bugtracker">https://github.com/zatikon/zatikon/issues</url>
  <url type="vcs-browser">https://github.com/zatikon/zatikon</url>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
  </supports>

  <categories>
    <category>Game</category>
    <category>StrategyGame</category>
    <category>BoardGame</category>
  </categories>

  <description>
    <p>
        Chess with less complex movement, and instead with:
    </p>
    <ul>
        <li>new, engaging rules</li>
        <li>tons of pieces to choose from</li>
        <li>army-building metagame</li>
        <li>magic!</li>
    </ul>
    <p>
        Zatikon offers online and local gameplay, so there's something in it for every kind of player!
    </p>
  </description>

  <launchable type="desktop-id">com.chroniclogic.Zatikon.desktop</launchable>
  <content_rating type="oars-1.1">
        <content_attribute id="violence-cartoon">moderate</content_attribute>
        <content_attribute id="violence-fantasy">moderate</content_attribute>
        <content_attribute id="social-chat">intense</content_attribute>
  </content_rating>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/zatikon/zatikon-static/main/screenshot1.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/zatikon/zatikon-static/main/screenshot2.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/zatikon/zatikon-static/main/screenshot3.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/zatikon/zatikon-static/main/screenshot4.png</image>
    </screenshot>
  </screenshots>


  <releases>
    <release version="1.1.5" date="2024-11-22">
      <description>
        <ul>
          <li>single player game difficulty readjusted towards significantly easier</li>
          <li>security fixes</li>
          <li>buttons in the UI updated</li>
          <li>random game and AI games made more fair</li>
          <li>gameplay consistency fixes</li>
        </ul>
      </description>
    </release>
    <release version="1.1.4" date="2023-12-07">
      <description>
        <ul>
          <li>client config now uses TOML</li>
          <li>password remembering added</li>
        </ul>
      </description>
    </release>
    <release version="1.1.3" date="2023-11-11">
      <description>
        <ul>
          <li>security improvements</li>
          <li>browser-starting code fixed</li>
          <li>logging is more consistent</li>
          <li>skippable tutorial</li>
          <li>running the standalone client uses server thread instead of server process</li>
        </ul>
      </description>
    </release>
    <release version="1.1.2" date="2023-07-26">
      <description>
        <p>Made games with AI significantly easier.</p>
      </description>
    </release>
    <release version="1.1.1" date="2023-07-25">
      <description>
        <p>Fixed an issue where all singleplayer games were tutorial games.</p>
      </description>
    </release>
    <release version="1.1.0" date="2023-07-24">
      <description>
        <p>Zatikon is now FOSS! Source code is available AGPL3.0-licensed on GitHub.</p>
      </description>
    </release>
    <release version="1.0.99" date="2023-07-24">
      <description>
        <p>First release on Flathub!</p>
      </description>
    </release>
  </releases>

</component>
