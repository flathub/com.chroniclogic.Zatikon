<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.chroniclogic.Zatikon</id>

  <name>Zatikon</name>
  <summary>Chess-like, fantasy game of conquering the enemy's castle</summary>

  <metadata_license>FSFAP</metadata_license>
  <project_license>AGPL-3.0-or-later</project_license>

  <url type="homepage">https://github.com/zatikon</url>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
  </supports>

  <description>
    <p>
        Chess with less complex movement, and instead with:
        <ul>
            <li>new, engaging rules</li>
            <li>tons of pieces to choose from</li>
            <li>army-building metagame</li>
            <li>magic!</li>
        </ul>
        Zatikon offers online and local gameplay, so there's something in it for every kind of player!
    </p>
  </description>

  <launchable type="desktop-id">zatikon.desktop</launchable>
  <content_rating type="oars-1.0">
        <content_attribute id="violence-cartoon">moderate</content_attribute>
        <content_attribute id="violence-fantasy">moderate</content_attribute>
        <content_attribute id="social-chat">intense</content_attribute>
  </content_rating>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/zatikon/zatikon-static/main/screenshot1.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/zatikon/zatikon-static/main/screenshot2.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/zatikon/zatikon-static/main/screenshot3.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/zatikon/zatikon-static/main/screenshot4.png</image>
    </screenshot>
  </screenshots>


  <releases>
    <release version="1.0.99" date="2023-07-24">
      <description>
        <p>First release on Flathub!</p>
      </description>
    </release>
  </releases>

</component>
